---
import BaseLayout from '@/layouts/BaseLayout.astro';
const whatsapp = import.meta.env.WHATSAPP_NUMBER ?? '+254700000000';
---
<BaseLayout seo={{ title: 'Contact Sesicthub', description: 'Contact Sesicthub Kenya.', canonicalPath: '/contact/' }}>
  <h1 class="text-2xl font-bold">Contact</h1>
  <p class="mt-3">WhatsApp: <a class="underline" href={`https://wa.me/${whatsapp.replace(/\D/g, '')}`}>{whatsapp}</a></p>
</BaseLayout>
